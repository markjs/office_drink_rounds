<%= form_for @user_group do |f| %>
  <% if @user_group.errors.any? %>
    <div class="errors">
      <h2>There be errors!</h2>
      <ul>
        <% @user_group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
